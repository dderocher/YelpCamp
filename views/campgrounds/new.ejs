<% include ../partials/header  %>
<div class="container">

    <h1 style="text-align:center">Add a new Campground</h1>
    
    <div class="center-block" style="width:65% ; margin-top:20px">
        <form class="form-horizontal" action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="POST-campname" class="col-sm-2 control-label">Name:</label>
                <div class="col-sm-6">
                    <input id="POST-campname" type="text" class="form-control" 
                       name="campname" placeholder="name">
                </div>
            </div>
            
            <div class="form-group">
                <label for="POST-imageurl" class="col-sm-2 control-label">Image Url:</label>
                <div class="col-sm-10">
                    <input id="POST-imageurl" type="text" class="form-control" 
                        name="imageurl" placeholder="image url">
                </div>
            </div>
            
            <div class="form-group">
                <label for="POST-description" class="col-sm-2 control-label">Description:</label>
                <div class="col-sm-10">
                    <input id="POST-description" type="text" class="form-control" 
                        name="description" placeholder="description">
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </div>
        
        </form>
       
        <a href="/campgrounds">Go Back</a>
        
    </div>
    
</div>
<% include ../partials/footer  %>