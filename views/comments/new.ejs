<% include ../partials/header %>


<div class="container">

    <h1 style="text-align:center">Add a new Comment to <%=campground.name%></h1>
    
    <div class="center-block" style="width:65% ; margin-top:20px">
        
        <form class="form-horizontal" action="/campgrounds/<%=campground._id%>/comments" method="POST">
            
            <div class="form-group">
                <label for="POST-commenttext" class="col-sm-2 control-label">Text:</label>
                <div class="col-sm-6">
                    <input id="POST-commenttext" type="text" class="form-control" 
                       name="comment[text]" placeholder="text">
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </div>
        
        </form>
       
        <a href="/campgrounds">Go Back</a>
        
    </div>
    
</div>


<% include ../partials/footer %>